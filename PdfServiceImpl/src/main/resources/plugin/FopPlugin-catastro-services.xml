<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="PdfPlugin" class="es.gob.catastro.service.rmi.pdf.server.PDFPlugin" />        

    <bean id="PdfService" class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="PdfService"/>
        <property name="service" ref="PdfPlugin"/>
        <property name="serviceInterface" value="es.gob.catastro.service.pdf.PDFService"/>
        <property name="registryPort" ref="rmiServicePort"/>
		<property name="servicePort" value="55000" />
    </bean>
    
    <bean id="loggerPdfServiceImpl" class="es.gob.catastro.service.logging.LogPluginConfiguration" init-method="configure">
    	<property name="logFile" value="d:/docs/logs/output.txt"/>
    	<property name="pattern" value="es.gob.catastro.service.rmi.pdf"/>
    	<property name="level" value="DEBUG"/>
    	<property name="buffered" value="false"/>
    </bean>
    
    <bean id="loggerFop" class="es.gob.catastro.service.logging.LogPluginConfiguration" init-method="configure">
    	<property name="logFile" value="d:/docs/logs/fop-output.txt"/>
    	<property name="pattern" value="org.apache"/>
    	<property name="level" value="ERROR"/>
    </bean>    
    
</beans>    