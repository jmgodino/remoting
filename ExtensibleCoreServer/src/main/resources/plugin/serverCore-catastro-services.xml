<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
					    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
	">

	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	  <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_FALLBACK"/>
	  <property name="searchSystemEnvironment" value="true"/>
	</bean>

 
	<bean id="rmiServicePort"  class="java.lang.Integer">
		<constructor-arg value="${server.core.rmi.port}"/>
	</bean>
 	
	<!-- Solo necesario si se va a usar el rmiregistry externo del JDK -->
	<!-- 	
	<bean id="rmiServiceHost" class="java.lang.String">
		<constructor-arg value="localhost" />
	</bean>
 	-->
 
 	<aop:aspectj-autoproxy/>
 	
 	<bean id="traceServerInfo" class="es.gob.catastro.service.core.inspector.TraceServerInfo">
 		<property name="interval" value="120000" />
 	</bean>
 	
    <bean id="loggerAccessControl" class="es.gob.catastro.service.core.logging.LogPluginConfiguration" init-method="configure">
    	<property name="logFile" value="d:/docs/logs/core-access.txt"/>
    	<property name="pattern" value="es.gob.catastro.service.core.aop"/>
    	<property name="level" value="INFO"/>
    	<property name="format" value="%d{dd/MM/yyyy HH:mm:ss} - %m%n" />
    	<property name="buffered" value="false" />
    </bean>
    
    <bean id="loggerStatus" class="es.gob.catastro.service.core.logging.LogPluginConfiguration" init-method="configure">
    	<property name="logFile" value="d:/docs/logs/core-status.txt"/>
    	<property name="pattern" value="es.gob.catastro.service.core.inspector"/>
    	<property name="level" value="INFO"/>
    	<property name="format" value="%d{dd/MM/yyyy HH:mm:ss} - %m%n" />
    	<property name="buffered" value="false" />
    </bean>    
    
    <bean id="logAspect" class="es.gob.catastro.service.core.aop.LoggerInterceptor" />
    
</beans>    