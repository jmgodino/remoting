<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="PingPlugin" class="es.gob.catastro.service.rmi.ping.server.PingPlugin" />        

    <bean id="PingService" class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="Ping"/>
        <property name="service" ref="PingPlugin"/>
        <property name="serviceInterface" value="es.gob.catastro.service.ping.PingService"/>
        <property name="registryPort" ref="rmiServicePort"/>
		<property name="servicePort" value="55100" />
    </bean>

    
</beans>    